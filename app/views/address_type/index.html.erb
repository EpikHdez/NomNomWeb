                                  <td><%= at.id %></td>
                                  <td><%= at.name %></td>
                                    <td>
                                  <div class="hidden-phone">
                                    <button class="btn btn-primary btn-xs fa fa-pencil" onclick="editAddressType(<%= at.id %>, '<%= at.name %>');"></button>
